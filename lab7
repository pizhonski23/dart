import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(
          title: Text('Лабораторна №7 - Варіант 1'),
          centerTitle: true,
        ),
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              // Три квадрати в рядок (горизонтально)
              Row(
                mainAxisAlignment: MainAxisAlignment.center,
                children: [
                  // Квадрат a = 20px
                  Container(
                    width: 60,  // Збільшено для видимості
                    height: 60,
                    color: Colors.blue,
                    margin: EdgeInsets.all(10),
                    child: Center(
                      child: Text(
                        'a=20px',
                        style: TextStyle(
                          color: Colors.white,
                          fontWeight: FontWeight.bold,
                        ),
                      ),
                    ),
                  ),
                  
                  // Квадрат b = 30px
                  Container(
                    width: 90,
                    height: 90,
                    color: Colors.green,
                    margin: EdgeInsets.all(10),
                    child: Center(
                      child: Text(
                        'b=30px',
                        style: TextStyle(
                          color: Colors.white,
                          fontWeight: FontWeight.bold,
                        ),
                      ),
                    ),
                  ),
                  
                  // Квадрат c = 60px
                  Container(
                    width: 120,
                    height: 120,
                    color: Colors.red,
                    margin: EdgeInsets.all(10),
                    child: Center(
                      child: Text(
                        'c=60px',
                        style: TextStyle(
                          color: Colors.white,
                          fontWeight: FontWeight.bold,
                        ),
                      ),
                    ),
                  ),
                ],
              ),
              
              SizedBox(height: 50),  // Відступ між квадратами і текстом
              
              // Використання RichText
              Container(
                padding: EdgeInsets.all(20),
                decoration: BoxDecoration(
                  color: Colors.black87,
                  borderRadius: BorderRadius.circular(10),
                ),
                child: RichText(
                  text: TextSpan(
                    children: [
                      TextSpan(
                        text: 'Flutter ',
                        style: TextStyle(
                          color: Colors.yellow,
                          fontSize: 24,
                          fontWeight: FontWeight.bold,
                          fontStyle: FontStyle.italic,
                        ),
                      ),
                      TextSpan(
                        text: 'Stack ',
                        style: TextStyle(
                          color: Colors.cyan,
                          fontSize: 24,
                          decoration: TextDecoration.underline,
                          decorationColor: Colors.white,
                        ),
                      ),
                      TextSpan(
                        text: 'RichText',
                        style: TextStyle(
                          color: Colors.orange,
                          fontSize: 24,
                          decoration: TextDecoration.lineThrough,
                          decorationStyle: TextDecorationStyle.wavy,
                        ),
                      ),
                    ],
                  ),
                ),
              ),
            ],
          ),
        ),
      ),
